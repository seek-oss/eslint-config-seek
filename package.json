{
  "name": "eslint-config-seek",
  "version": "15.0.4",
  "type": "module",
  "description": "ESLint configuration used by SEEK",
  "repository": {
    "type": "git",
    "url": "https://github.com/seek-oss/eslint-config-seek.git"
  },
  "author": "SEEK",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seek-oss/eslint-config-seek/issues"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": "./dist/index.cjs",
    "./base": "./dist/base.cjs",
    "./extensions": "./dist/extensions.cjs",
    "./vitest": "./dist/vitest/index.cjs",
    "./vitest/base": "./dist/vitest/base.cjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "pnpm run '/^lint:.*/'",
    "format": "pnpm run '/^format:.*/'",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "lint:eslint": "eslint .",
    "test": "pnpm run '/^test:.*/'",
    "test:base": "eslint --config dist/base.cjs src/index.ts",
    "test:react": "eslint --config dist/index.cjs src/index.ts",
    "test:vitest": "eslint --config dist/vitest/index.cjs src/index.ts",
    "test:vitest-base": "eslint --config dist/vitest/base.cjs src/index.ts",
    "lint:tsc": "tsc --noEmit",
    "build": "tsdown",
    "lint:prettier": "prettier --check .",
    "version": "changeset version && prettier --write .",
    "release": "changeset publish"
  },
  "homepage": "https://github.com/seek-oss/eslint-config-seek#readme",
  "dependencies": {
    "@vitest/eslint-plugin": "^1.5.2",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-cypress": "^5.0.0",
    "eslint-plugin-import-x": "^4.9.0",
    "eslint-plugin-import-zod": "^1.2.1",
    "eslint-plugin-jest": "^29.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^17.0.0",
    "typescript-eslint": "^8.56.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@changesets/get-github-info": "^0.7.0",
    "@tsconfig/node22": "^22.0.2",
    "eslint": "^10.0.0",
    "jiti": "^2.6.1",
    "prettier": "^3.3.3",
    "tsdown": "^0.20.0",
    "typescript": "~5.9.0"
  },
  "peerDependencies": {
    "eslint": ">=9.22.0",
    "typescript": ">=5.5.4"
  },
  "engines": {
    "node": ">=22.21.1"
  },
  "packageManager": "pnpm@10.30.1"
}
